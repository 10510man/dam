import random
print('컴퓨터와 가위바위보를 합시다.')
cwin = 0
mwin = 0
while cwin < 2 and mwin < 2:
    comc = random.randint(1,3)
    manc = int(input('\n1: 가위, 2: 바위, 3: 보 입니다. 당신의 선택은?\n'))
    if comc == manc:
        print('무승부 입니다.')
    elif comc > manc:
        print('컴퓨터가 이겼습니다.')
        cwin += 1
    else:
        print('당신이 이겼습니다.')
        mwin += 1

if mwin > 2:
    print('\n컴퓨터가 최종 승자입니다.')
else:
    print('\n당신이 최종 승자입니다.')
